{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@compound3/sdk": ["packages/sdk"],
      "hardhat-compound3": ["packages/hardhat-plugin"],
      "compound-lego-contracts": ["packages/contracts"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
} 